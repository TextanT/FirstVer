<?xml version="1.0" encoding="UTF-8"?>
<!-- mybatis map 선언 표시 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
              "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.besideYou.textant.dao.BookInfoDao">	
	
	<insert id="writeBook" parameterType="bookInfo">
		INSERT INTO BOOKINFO VALUES(BOOKINFO_SEQ.nextval,#{bookName},#{totalPage},#{userNum},#{thumbnail},#{fileLocation},#{genre},SYSDATE,0,0,0,#{bookDesc},0)
	</insert>
	
	<select id="getNewBooks" resultType="String">
		SELECT fileLocation from bookInfo order by writeDate desc
	</select>
	<select id="getTotalPages" parameterType="String" resultType="int">
		SELECT totalpage from bookInfo where fileLocation = #{fileLocation}
	</select>
</mapper>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
